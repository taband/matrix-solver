{
      "version": "2.0.0",
      "tasks": [
            {
                  "type": "shell",
                  "label": "g++ build",
                  "command": "g++",
                  "args": [
                        "-o",
                        "${fileDirname}/out/${fileBasenameNoExtension}",
                        "${file}"
                  ],
                  "options": {
                        "cwd": "${workspaceFolder}"
                  },
                  "problemMatcher": [
                        "$gcc"
                  ],
                  "group": "build"
            },

      ]
}